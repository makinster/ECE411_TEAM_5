void loop() 
{
   
   lcd.clear();
   ifRead1=analogRead(A0); 
   lcd.print("Sensor 1:       ");
   lcd.setCursor(10,0);
   lcd.print(ifRead1);  // Print a message to the LCD.
   //delay(tim);

   ifRead2=analogRead(A1);
   Serial.println((ifRead2));
   lcd.setCursor(0,1);
   lcd.print("Sensor 2:       ");
   lcd.setCursor(10,1);
   lcd.print(ifRead2);  // Print a message to the LCD.
   delay(tim);
   
}
/************************************************************/
